<%= render "shared/header" %>
<div class="container">
<h5 class="screen-name">お子さまの追加</h5>
<div class="contents">

<%= form_with model: @family_creator_form, url: user_creators_path(user_id: current_user), local: true do |f| %>

<div class="row">
  <div class="input-field col s12">
    <%= f.text_field :creator_name, class: "validate" %>
    <%= f.label :creator_name, 'お子さまの名前（必須）' %>
  </div>
</div>

<div class="row">
  <div class="col s12 m4 l2 xl2">
  <%= f.label :creator_date_of_birth, '誕生日（必須）' %><br>
    <div class="datetime">
      <%= raw sprintf(
        f.date_select(
          :creator_date_of_birth,
          use_month_numbers: true,
          prompt:'---',
          start_year: Time.now.year,
          end_year: 1930,
          date_separator: '%s',
          class: ""),
        '<span class="text-baseline"> 年 </span>', '<span class="text-baseline"> 月 </span>') + '<span class="text-baseline"> 日 </span>'
      %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l4 xl3">
    <%= f.label :creator_gender_id, '性別' %>
    <%= f.collection_select(:creator_gender_id, Gender.all, :id, :value, {}, {}) %>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l4 xl3">
    <%= f.label :creator_gender_id, 'こどもとの関係' %>
    <%= f.collection_select(:relation_id, Relation.all, :id, :value, {}, {}) %>
  </div>
</div>

<div class="button_wrapper">
  <%= button_tag '', class: 'btn-large waves-effect waves-light', type: 'button', onclick: 'submit();' do %>
    登録<i class="material-icons right">send</i>
  <% end %>
</div>

<% end %>
</div>
</div>
