<%= render "shared/header" %>
<div class="container">
<h5 class="screen-name">作品一覧</h5>

<ul class="flex">
  <li><%= link_to 'みんな', user_works_path(user_id: current_user.id), class: "everyone-circle" %></li>
  <% @user_creators.each do |creator| %>
    <li><%= link_to creator.name, user_works_path(user_id: current_user.id, creator_id: creator.id), class: "ori-circle" %></li>
  <% end %>
</ul>

<div class="row m-flex">
  <% @user_works.each do |work| %>
    <div class="col s12 m6 l4 xl3">
      <div class="card">
        <div class="card-action">
          <span><%= work.date.strftime("%Y年%-m月%-d日") %></span>
          <span class="right"><%= link_to work.creator.name, user_works_path(user_id: current_user.id, creator_id: work.creator.id), class: "text-right" %></span>
        </div>
        <div class="card-image work">
          <%= link_to work_path(work) , class: "work-link" do %>
            <%= image_tag work.images[0] %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>