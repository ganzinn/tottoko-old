<%= render "shared/header" %>

<h1>お子さまの追加</h1>

<%= form_with model: @family_creator_form, url: creators_path, local: true do |f| %>

<div>
  <label>お子さまの名前*</label>
  <p><%= f.text_field :creator_name %></p>
</div>

<div>
  <label>誕生日*</label>
  <%# <%= f.date_select :creator_date_of_birth, use_month_numbers: true, start_year: 1930, end_year: Time.now.year, default: Date.new(1989, 1, 1) %>
  <p><%= raw sprintf(
    f.date_select(
      :creator_date_of_birth,
        use_month_numbers: true,
        prompt:'---',
        start_year: 1930,
        end_year: Time.now.year,
        date_separator: '%s'),
      "<span> 年 </span>", "<span> 月 </span>") + "<span> 日 </span>"
  %></p>
</div>

<div>
  <label>性別</label>
  <p><%= f.collection_select(:creator_gender_id, Gender.all, :id, :value, {}, {}) %></p>
</div>

<div>
  <label>こどもとの関係*</label>
  <p><%= f.collection_select(:relation_id, Relation.all, :id, :value, {}, {}) %></p>
</div>

<div>
  <%= f.submit '完了' %>
</div>

<% end %>