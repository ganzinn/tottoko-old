  <% else %>
    <li><%= link_to 'ログイン', new_user_session_path, class: "light-blue-text text-accent-4" %></li>
    <li><%= link_to '新規登録', new_user_registration_path, class: "light-blue-text text-accent-4" %></li>
  <% end %>
</ul>

</header>